<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/paddding_top"
    android:paddingLeft="@dimen/paddding_left_right"
    android:paddingRight="@dimen/paddding_left_right"
    tools:context="edu.galileo.android.rockpaperscissors.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/msg.phone"
            android:gravity="center"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/msg.ties"
            android:gravity="center"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/msg.user"
            android:gravity="center"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/score.phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center"
            android:textSize="50sp"/>
        <TextView
            android:id="@+id/score.ties"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center"
            android:textSize="50sp"/>
        <TextView
            android:id="@+id/score.user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center"
            android:textSize="50sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/winner.phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_option"
        android:text="@string/msg.winner"
        android:textColor="@android:color/holo_orange_dark"
        android:gravity="center"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/option.phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="?"
        android:gravity="center"
        android:textSize="50sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddding_top"
        android:text="@string/msg.vs"
        android:gravity="center"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/option.user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddding_top"
        android:text="?"
        android:gravity="center"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/winner.user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg.tie"
        android:textColor="@android:color/holo_orange_dark"
        android:gravity="center"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/buttons.user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_option"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn.rock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button.rock"/>
        <Button
            android:id="@+id/btn.paper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button.paper"/>
        <Button
            android:id="@+id/btn.scissor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button.scissors"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button.tryagain"
        android:layout_gravity="center"/>

</LinearLayout>
